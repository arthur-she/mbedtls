    unsigned char buf[100];
    unsigned char *tmp;
    mbedtls_mps_reader rd;
    for( size_t i=0; (unsigned) i < sizeof( buf ); i++ )
        buf[i] = (unsigned char) i;

    /* Preparation (lower layer) */
    mbedtls_mps_reader_init( &rd, NULL, 0 );

